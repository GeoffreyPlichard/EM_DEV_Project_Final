/*
** HEADER
*/

	#header{padding:10px 30px; margin:0 0 40px 0;}
		#header nav ul{padding-top:15px;}
		#header nav ul li{display:inline-block; margin:0 10px;}


/*
** ASIDE
*/

	aside .content{padding:3% 5%;}
	aside > div.border{position:relative; margin-bottom:20px;}
	aside h2{
		width:100%;
		padding:10px;
		margin-bottom:20px;
	}

	#fastlinks ul li{position:relative; margin:10px 0 10px 10px; padding-left:10px;}
	#fastlinks ul li:before{
		content:'';
		position:absolute;
		width:6px; height:12px;
		left:-10px; top:3px;
		background:url(../img/global/arrow-list.png) left top no-repeat;
	}





