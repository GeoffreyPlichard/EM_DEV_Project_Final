/*
** GLOBAL
*/

	*, *::before, *::after{box-sizing:border-box; -moz-box-sizing: border-box;}

	/* overlay bleu */
	*{outline:none;}

	body{
		font-family: 'Raleway', 'Arial', 'Verdana', sans-serif;
		font-size:1em;
		line-height:1.2em;
	}
	
	h2{
		font-size:1.8em;
		text-transform: uppercase;
		font-weight:700;
		margin-bottom: 10px;
		line-height:1.2em;
	}
	h3{font-size:1.5em; margin-bottom:15px;}

	p{margin-bottom:1em;}

	a{color:inherit; text-decoration:none;}
	a:hover{text-decoration:underline;}

	a.read-more{
		float:right;
		margin:5px 0;
		display:inline-block;
	}
	a.read-more:hover{
		color:#7dd1eb;
		text-decoration: none;
	}
	a.test{
		color:blue;
	}

	label, input[type=text], select, textarea{width:100%;}
	label{display:block; margin-bottom:5px;}
	input[type=text]{height:40px; padding-left:10px;}
	textarea{height:300px; resize:none; padding:10px;}
	
	select{border:solid 1px black;}
		@media screen and (-webkit-min-device-pixel-ratio:0) {  /*safari and chrome*/
			select{height:30px; line-height:30px; background:white;} 
		}
		select::-moz-focus-inner{border:0; padding:0;} /*Remove button padding in FF*/
		@-moz-document url-prefix() { select{padding: 15px 0!important;} } /* targets Firefox only */
		@media screen\0 { select{height:30px; line-height:30px;} } /* IE Hacks: targets IE 8, 9 and 10 */

	input[type=submit]{
		display:inline-block;
		border:none;
		padding:10px 30px;
		text-transform:uppercase;
		font-size:1.3em;
		cursor:pointer;
	}
	input[type=submit]:hover{background-color:#f3e7d2;}

/*
** CLASSES
*/

	.ghost{clear:both;}

	.large-content, .content{position:relative; width:100%; margin:0 auto;}
	.large-content{max-width:1280px;}
	.content{max-width:960px;}

	.table-middle{display:table; height:100%; width:100%;}
	.cell-middle{display:table-cell; vertical-align:middle;}

	.left{float:left;}
	.right{float:right;}
	.full-width{width:100%;}
	.two-column{width:49%;}
	.one-third{width:32%;}
	.two-third{width:65%;}
	.column-left{margin-right:1%;}
	.column-right{margin-left:1%;}
	.column-middle{margin-left:1%; margin-right:1%;}

	.transition, .transition *{-webkit-transition: all 0.2s ease-in-out; -moz-transition: all 0.2s ease-in-out; -o-transition: all 0.2s ease-in-out; transition: all 0.2s ease-in-out;}

	.border{border:solid 1px #7dd1eb;}
	.active{cursor:default;}

	.bg-cover{
		background-repeat:no-repeat;
		background-position:center center;
		-webkit-background-size:cover;
		-moz-background-size:cover;
		-o-background-size:cover;
		background-size:cover;
	}
		.bg-cover > img{width:100%;}


/*
** COULEURS
