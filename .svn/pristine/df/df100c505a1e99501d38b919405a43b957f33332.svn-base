{% extends "PublicBundle::base.html.twig" %}

{# Description #}
{% block description %} Go Mobility, un super site {% endblock %}

{# title #}
{% block title %} Accueil {% endblock %}



{# body #}
{% block body %} 
<section id="participe" class="global-content two-third left">
	
	<h2>Je participe</h2>
	
	<form action="post">
		
		<p>
			<label for="email">Votre email :</label>
			<input type="text" name="email" id="email" placeholder="Votre email...">
		</p>
		
		<p>
			<label for="transport">Type de transport :</label>
			<select name="transport" id="transport">
				<option value="">Sélectionnez un moyen de transport</option>
				<option value="pied">À pied</option>
				<option value="transports">Transports en commun</option>
				<option value="covoiturage">Covoiturage</option>
				<option value="velo">Vélo</option>
			</select>
		</p>

		<p class="two-column left">
			<label for="coor-depart">Coordonnées de départ :</label>
			<input type="text" name="coor-depart" id="coor-depart" placeholder="Les coordonnées de départ...">
		</p>
		<p class="two-column right">
			<label for="coor-arrivee">Coordonnées d'arrivée' :</label>
			<input type="text" name="coor-arrivee" id="coor-arrivee" placeholder="Les coordonnées d'arrivée...">
		</p>
		<div class="ghost"></div>

		<p>
			<label for="description">Description du parcours</label>
			<textarea name="description" id="description" placeholder="Écrivez la description du parcours..."></textarea>
		</p>

		<p><input type="checkbox" name="jeu" id="jeu" value="1"><label for="jeu">Je souhaite participer au jeu concours.</label></p>

		<input type="submit" value="Valider" class="right bg-blue-light white transition">
		<div class="ghost"></div>
	</form>

</section> <!-- .global-content -->
{% endblock %}

{# javascripts #}
{% block javascripts %}
	<script src="https://maps.googleapis.com/maps/api/js?sensor=false" type="text/javascript"></script>
	<script src="{{ asset('bundles/public/js/map.js') }}"></script>
{% endblock %}
